{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
  },
  "include": [
    "src/**/*",
    "node_modules/gatsby-recipes/src/**/*",
    "wechat",
    "test/wechat/mp.test.js"
  ]
}
