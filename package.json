{
  "name": "serverless-space",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "node index.js",
    "test": "jest",
    "build": "nest build",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./e2e/jest-e2e.json",
    "offline": "serverless offline",
    "deploy": "serverless deploy",
    "pre-deploy": "cp package.json layers/nodejs/package.json && cd layers/nodejs && npm i --production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jeff-Tian/serverless-space.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Jeff-Tian/serverless-space/issues"
  },
  "homepage": "https://github.com/Jeff-Tian/serverless-space#readme",
  "dependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "@nestjs/platform-express": "^8.0.6",
    "@types/aws-lambda": "^8.10.83",
    "@vendia/serverless-express": "^4.3.11",
    "aws-lambda": "^1.0.6",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "serverless-express": "^2.0.11",
    "rxjs": "*"
  },
  "devDependencies": {
    "serverless": "^2.55.0",
    "@nestjs/cli": "^8.1.1",
    "@nestjs/testing": "^8.0.6",
    "@types/jest": "^27.0.1",
    "jest": "^27.1.1",
    "rimraf": "^3.0.2",
    "serverless-offline": "^8.1.0",
    "serverless-plugin-layer-manager": "^1.0.6",
    "ts-jest": "^27.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
